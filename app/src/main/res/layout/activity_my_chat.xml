<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="12dp"
        android:src="@drawable/ic_back"
        android:contentDescription="Quay lại"
        android:background="@drawable/circle_background"
        android:enabled="true"
        android:visibility="visible"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <!-- Delivery Info Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/deliveryCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/card_background"

        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backBtn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView_comment"
                android:layout_width="48dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_account_circle_24"

                />

            <TextView
                android:id="@+id/nameTxt"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHOP"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/text_primary"
                android:textSize="24sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Orders Title -->
    <TextView
        android:id="@+id/chatsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:text="Online ... phút trước"
        android:textColor="@color/text_primary"
        android:textSize="20sp"

        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deliveryCard" />

    <!-- Orders RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chatsTitle" />




    <!-- Chat Input Area -->
    <LinearLayout
        android:id="@+id/chatInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        >

        <EditText
            android:id="@+id/txtMess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nhập tin nhắn..."
            android:background="@color/card_background"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/sendBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/circle_background"
            android:padding="10dp"
            android:src="@drawable/baseline_send_24"
            android:contentDescription="Gửi tin"
            app:tint="#FFFFFF" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>